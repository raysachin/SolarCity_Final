<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header with background color lemon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solar Panel Overview"
        android:background="@color/lavender"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"/>

    <!-- Solar Panel Efficiency -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Efficiency"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <!-- Efficiency Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solar panel efficiency refers to the amount of sunlight that the panel can convert into usable electricity. Higher efficiency panels can generate more power in the same amount of sunlight."
        android:textSize="16sp"
        android:padding="10dp"/>

    <!-- Importance of Solar Panels -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Importance"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <!-- Importance Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solar panels play a crucial role in the transition to renewable energy sources, reducing dependence on fossil fuels and mitigating climate change. They offer a sustainable and environmentally friendly way to generate electricity."
        android:textSize="16sp"
        android:padding="10dp"/>

    <!-- Advantages of Solar Panels -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advantages"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <!-- Advantages Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advantages of solar panels:"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Renewable Energy Source"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Reduced Electricity Bills"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Low Maintenance Costs"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Environmentally Friendly"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Energy Independence"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Diverse Applications (Residential, Commercial, Industrial)"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>







