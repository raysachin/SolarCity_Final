<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header with background color lemon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification and Cleaning Records"
        android:background="@color/lavender"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"/>

    <!-- Notification -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <!-- Notification 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Section 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cloudy Weather"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Additional lines for Notification 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Low Generation Expected"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efficiency may decrease"/>
    </LinearLayout>


    <!-- Notification 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Section 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cleaning Required"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Additional lines for Notification 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dust accumulation detected"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efficiency may be impacted"/>
    </LinearLayout>

    <!-- Notification 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Section 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preventive Maintenance Required"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Additional lines for Notification 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cells or Modules get damaged"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efficiency may be impacted"/>
    </LinearLayout>

    <!-- Heading for Cleaning Record -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cleaning Record"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"/>

    <!-- Text for Cleaning Record -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last 3 Cleaning Dates:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <!-- Last 3 cleaning dates -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. January 10, 2024"
        android:textSize="16sp"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. March 5, 2024"
        android:textSize="16sp"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. April 20, 2024"
        android:textSize="16sp"
        android:paddingStart="20dp"/>

    <!-- Update Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <!-- Book New Appointment Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book New Appointment"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>



